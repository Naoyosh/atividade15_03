<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Avaliacao">

    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome:" android:id="@+id/idNome"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="86dp"
            tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota da 1 avaliação" android:id="@+id/idAva1"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="162dp"
            tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota da 2 avaliação" android:id="@+id/idAva2"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="Média:"
            android:layout_width="360dp"
            android:layout_height="47dp" tools:layout_editor_absoluteY="323dp"
            tools:layout_editor_absoluteX="12dp" android:id="@+id/idTextMedia"/>
    <Button
            android:text="Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="242dp"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/buttonCalcular" android:onClick="CalcularMedia"/>
    <TextView
            android:layout_width="356dp"
            android:layout_height="68dp" tools:layout_editor_absoluteY="398dp"
            tools:layout_editor_absoluteX="14dp" android:id="@+id/idTextResultado" android:text="Resultado:"/>
</android.support.constraint.ConstraintLayout>